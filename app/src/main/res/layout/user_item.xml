<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item">

    <TextView
        android:id="@+id/user_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_23"
        android:layout_marginTop="@dimen/margin_5"
        android:fontFamily="@font/quicksand_medium"
        android:padding="@dimen/padding_5"
        android:text="@string/name"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:fontFamily="@font/quicksand"
        android:padding="@dimen/padding_5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toRightOf="@id/user_name_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name"/>

    <TextView
        android:id="@+id/reputation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reputation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_label"
        android:textColor="@color/orange"
        android:fontFamily="@font/quicksand_medium"
        android:layout_marginLeft="@dimen/margin_23"
        android:layout_marginTop="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/reputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Reputation"
        app:layout_constraintLeft_toRightOf="@id/reputation_label"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        android:textSize="@dimen/text_size_15"
        android:fontFamily="@font/quicksand"/>

</androidx.constraintlayout.widget.ConstraintLayout>